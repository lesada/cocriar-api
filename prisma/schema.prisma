generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Newsletter {
  email String @id

  @@map("newsletters")
}

model SubscribedUser {
  id        String   @id @default(uuid())
  email     String
  name      String
  cellphone String
  birthdate DateTime
  entity    String
  event_id  String
  Event     Event    @relation(fields: [event_id], references: [id])

  @@unique([email, event_id])
  @@map("subscribed_users")
}

model Event {
  id               String   @id @default(uuid())
  title            String
  image_url        String
  tag              String
  description      String   @db.Text
  created_at       DateTime @default(now())
  event_date       DateTime
  address          String
  max_participants Int?

  subscribed_users SubscribedUser[]

  @@map("events")
}

model Article {
  id          String   @id @default(uuid())
  title       String
  image_url   String
  category    String
  description String   @db.Text
  content     String   @db.Text
  created_at  DateTime @default(now())

  @@map("articles")
}

model Testimonial {
  id              String   @id @default(uuid())
  name            String
  job_description String
  company         String
  content         String
  aproved         String
  rating          Int
  created_at      DateTime @default(now())

  @@map("testimonials")
}
